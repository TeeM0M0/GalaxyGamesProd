{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Liste des Articles
{% endblock %}

{% block body %}
	<h1 class="text-center text-info mt-4 pt-4 display-1 fw-bold">Liste des articles commande id n°{{id}}</h1>
	<div class="row justify-content-center">
		<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
			<div class="table-responsive">
				<table class="table table-hover table align-middle">
					<thead>
						<tr class="fw-bold text-info text-center">
							<th scope="col"></th>
							<th scope="col">Articles</th>
							<th scope="col">Quantité</th>
							<th scope="col">Prix unitaire</th>
						</tr>
					</thead>
					<tbody>
						{% for a in articles %}
							<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }} text-center">
								<td>
                                    {% set url = 'images/articles/'~a.article.imageArticles[0].nom %} 
								    <img src="{{asset(url)}}" class="me-3  rounded-5" style="max-width: 100; height: auto; object-fit: contain;"><img/>
                                </td>
								<td>{{a.article.libelle}}</td>
								<td>{{a.qte}}</td>
								<td>{{a.prixUnit}}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}

