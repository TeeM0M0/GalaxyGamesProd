{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Message{% endblock %}

{% block body %}
    <h1 class="text-center text-info mt-4 pt-4 display-1 fw-bold"> Message</h1>

    <div class="row justify-content-center">
		<div class="col-12 col-md-8 bg-white p-4 m-0 text-black text-center">
                <span >Email: {{message.email}}</span>
                <hr class="hr">
                <span class="me-3">Nom: {{message.nom}}</span><span class="ms-3">Prenom: {{message.prenom}}</span>
                <hr class="hr">
                <span>Sujet: {{message.sujet}}</span>
                <hr class="hr">
                <span>Message:</span>
                <p>{{message.message}}</p>
                <div class="mt-5 d-flex justify-content-between"><a href="{{path('fermermessage', {'id':message.id})}}" class="btn btn-info">Fermer le message</a><a href="{{path('listemessage')}}" class="btn btn-info">Retour</a></div>
        </div>
        
    </div>
{% endblock %}