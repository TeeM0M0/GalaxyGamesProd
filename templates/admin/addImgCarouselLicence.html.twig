{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Ajout d'images : Carousel licences
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-10 text-info">
				<h1 class="text-center text-info mt-4 pt-4 display-1 fw-bold">Ajout d'images : Carousel licences</h1>
				{{form(form)}}
				</div>
			</div>
			<h3 class="text-info ms-5 mt-4 pt-4 fw-bold">Liste des images</h3>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover table align-middle">
						<thead>
							<tr class="fw-bold text-info text-center">
								<th scope="col">image</th>
								<th scope="col">Supprimer l'image</th>
							</tr>
						</thead>
						<tbody>
							{% for i in images %}
									<td class="text-center">
                                        {% set url = 'images/carousel-licence/'~i.nomImage %} 
								        <img src="{{asset(url)}}" class="me-3  rounded-5" style="max-width: 250px; height: 150px; object-fit: contain;"><img/>
                                    </td>
									<td class="text-center">
										<a href="{{path('supp-imgcarousellicence',{'id':i.id})}}">
											<i class="bi bi-x-circle"></i>
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
