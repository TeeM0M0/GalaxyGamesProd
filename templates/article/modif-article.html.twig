{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Modification de article
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row justify-content-center">

			<div class="col-10 text-info">
				<h1 class="text-center text-info mt-4 pt-4 display-1 fw-bold">Modification de article</h1>
				{{form(form)}}
				</div>
			</div>
		</div>
		<h3 class="text-info ms-5 mt-4 pt-4 fw-bold">Liste des photos</h3>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover table align-middle">
						<thead>
							<tr class="fw-bold text-info text-center">
								<th scope="col">Photo</th>
								<th scope="col">Supprimer la photo</th>
							</tr>
						</thead>
						<tbody>
							{% for i in images %}
                                <td class="text-center">
                                    {% set url = 'images/articles/'~i.nom %} 
								    <img src="{{asset(url)}}" class="me-3  rounded-5" style="max-width: 100; height: auto; object-fit: contain;"><img/>
                                </td>
								<td class="text-center">
									<a href="{{path('supp-imgarticle',{'id':i.id})}}">
										<i class="bi bi-x-circle"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>{% endblock %}

